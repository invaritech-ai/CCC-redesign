{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["api/**/*"]
}
